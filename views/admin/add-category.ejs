<%-include('../partials/admin_header.ejs',{title:"admin page"})%>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Create Category</h2>
            <p class="mt-2">Add a new category or subcategory</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form>
                <!-- Category Type Selection -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="mb-4">
                            <label class="form-label">What would you like to create?</label>
                            <select class="form-select" id="categoryType" onchange="toggleCategoryFields()">
                                <option value="subcategory" selected>Subcategory</option>
                                <option value="category">Main Category</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-8 col-lg-8">
                        <!-- Common Fields -->
                        <div class="mb-4">
                            <label class="form-label">Name</label>
                            <input type="text" placeholder="Type here" class="form-control" required />
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Description</label>
                            <textarea placeholder="Type here" class="form-control" rows="4"></textarea>
                        </div>
                        
                        <!-- Parent Category Selection - Only visible for subcategories -->
                        <div class="mb-4" id="parentCategorySection">
                            <label class="form-label">Parent Category</label>
                            <select class="form-select" required>
                                <option value="">Select parent category</option>
                                <option>Electronics</option>
                                <option>Clothing</option>
                                <option>Home & Garden</option>
                                <option>Sports</option>
                            </select>
                        </div>

                        <!-- Additional Fields - Only visible for main categories
                        <div id="mainCategoryFields" style="display: none;">
                            <div class="mb-4">
                                <label class="form-label">Category Icon</label>
                                <input class="form-control" type="file" />
                            </div>
                            <div class="mb-4">
                                <label class="form-label">SEO Meta Keywords</label>
                                <input type="text" placeholder="Type here" class="form-control" />
                            </div>
                            <div class="mb-4">
                                <label class="form-label d-block">Featured Category</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="featured" value="yes">
                                    <label class="form-check-label">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="featured" value="no" checked>
                                    <label class="form-check-label">No</label>
                                </div>
                            </div>
                        </div>
                    </div> -->

                    <div class="col-xl-4 col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="mb-4">
                                    <label class="form-label">Status</label>
                                    <select class="form-select">
                                        <option>Active</option>
                                        <option>Disabled</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="button" class="btn btn-light">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
function toggleCategoryFields() {
    const categoryType = document.getElementById('categoryType').value;
    const parentCategorySection = document.getElementById('parentCategorySection');
    const mainCategoryFields = document.getElementById('mainCategoryFields');
    
    if (categoryType === 'category') {
        parentCategorySection.style.display = 'none';
        mainCategoryFields.style.display = 'block';
    } else {
        parentCategorySection.style.display = 'block';
        mainCategoryFields.style.display = 'none';
    }
}
</script>

