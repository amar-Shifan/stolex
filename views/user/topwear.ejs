					<div class="col-lg-9 col-xl-9">
						<div class="container my-5">
							<h2 class="text-center mb-4">Products in <span class="text-primary"><%= selectedName %></span></h2>
							<div class="row g-4">
								<% if (products.length > 0) { %>
									<div class="col-12">
									  <h3 class="text-secondary border-bottom pb-2">Products in <%= selectedName %></h3>
									</div>
									<% products.forEach(product => { %>
									  <div class="col-6 col-md-4 col-lg-3">
										<div class="card h-100 w-100 shadow-sm border-0 d-flex flex-column">
										  <img src="<%= product.images[0] || '/api/placeholder/400/400' %>" 
											   alt="<%= product.name %>" 
											   class="card-img-top img-fluid" 
											   style="height: 200px; object-fit: cover;">
										  <div class="card-body text-center d-flex flex-column justify-content-between">
											<h5 class="card-title fw-bold text-truncate" style="max-width: 100%;"><%= product.name %></h5>
											<p class="card-text text-muted small text-truncate" style="max-width: 100%;"><%= product.description ? product.description.substring(0, 50) + '...' : 'No description available' %></p>
											<p class="price text-success fw-bold fs-5 mb-0">$<%= product.price.toFixed(2) %></p>
											<a href="/product/<%= product._id %>" class="btn btn-dark btn-sm mt-3">View Details</a>
										  </div>
										</div>
									  </div>
									<% }); %>
								  <% } else { %>
									<div class="col-12 text-center">
									  <p class="text-muted">No products available for <%= selectedName %>.</p>
									</div>
								  <% } %>
								  
							</div>
						</div>
						
						
