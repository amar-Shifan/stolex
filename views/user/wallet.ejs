<%- include('../partials/header.ejs') %>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-white shadow-sm p-3 min-vh-100">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-person"></i> Profile
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-cart"></i> Orders
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart"></i> Wishlist
                </a>
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="bi bi-wallet"></i> Wallet
                </a>
            </div>
            <div class="mt-auto pt-3">
                <button class="btn btn-outline-danger w-100">
                    Sign out
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">
            <!-- Balance Card -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Available Balance</h5>
                            <h2 class="display-4 mb-4">$1,234.56</h2>
                            <div class="d-flex gap-2">
                                <button class="btn btn-light">Add Money</button>
                                <button class="btn btn-outline-light">Withdraw</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quick Actions</h5>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary">Send Money</button>
                                <button class="btn btn-outline-primary">Request Money</button>
                                <button class="btn btn-outline-primary">Pay Bills</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Transactions</h5>
                    <button class="btn btn-link">View All</button>
                </div>
                <div class="card-body">
                    <div class="transaction-item border-bottom pb-3 mb-3">
                        <div class="row align-items-center">
                            <div class="col-md-1">
                                <div class="bg-success-subtle p-2 rounded-circle text-center">
                                    <i class="bi bi-arrow-down"></i>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <h6 class="mb-1">Money Received</h6>
                                <p class="text-muted mb-0">From: John Doe</p>
                            </div>
                            <div class="col-md-2">
                                <span class="text-success">+$50.00</span>
                            </div>
                            <div class="col-md-2">
                                <small class="text-muted">Today</small>
                            </div>
                        </div>
                    </div>

                    <div class="transaction-item border-bottom pb-3 mb-3">
                        <div class="row align-items-center">
                            <div class="col-md-1">
                                <div class="bg-danger-subtle p-2 rounded-circle text-center">
                                    <i class="bi bi-arrow-up"></i>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <h6 class="mb-1">Bill Payment</h6>
                                <p class="text-muted mb-0">Electricity Bill</p>
                            </div>
                            <div class="col-md-2">
                                <span class="text-danger">-$75.50</span>
                            </div>
                            <div class="col-md-2">
                                <small class="text-muted">Yesterday</small>
                            </div>
                        </div>
                    </div>

                    <div class="transaction-item">
                        <div class="row align-items-center">
                            <div class="col-md-1">
                                <div class="bg-primary-subtle p-2 rounded-circle text-center">
                                    <i class="bi bi-plus"></i>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <h6 class="mb-1">Added Money</h6>
                                <p class="text-muted mb-0">Via Bank Transfer</p>
                            </div>
                            <div class="col-md-2">
                                <span class="text-success">+$200.00</span>
                            </div>
                            <div class="col-md-2">
                                <small class="text-muted">Oct 24</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Methods -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Payment Methods</h5>
                    <button class="btn btn-primary btn-sm">Add New</button>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="card-subtitle text-muted">Credit Card</h6>
                                        <img src="/api/placeholder/40/25" alt="Visa" class="img-fluid">
                                    </div>
                                    <p class="card-text">**** **** **** 4242</p>
                                    <small class="text-muted">Expires: 12/25</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="card-subtitle text-muted">Bank Account</h6>
                                        <img src="/api/placeholder/40/25" alt="Bank" class="img-fluid">
                                    </div>
                                    <p class="card-text">**** 5678</p>
                                    <small class="text-muted">Savings Account</small>
                                </div>
                            </div>
                        </div>
            </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
