		 document.addEventListener('DOMContentLoaded', function() {
      var img = document.getElementById('product-img');
      var lens = document.getElementById('zoom-lens');
      var result = document.createElement('div');
      result.id = 'zoom-result';
      document.body.appendChild(result);

      function zoom(e) {
        var imgWidth = img.width;
        var imgHeight = img.height;
        var lensWidth = lens.offsetWidth;
        var lensHeight = lens.offsetHeight;
        var x = e.pageX - img.offsetLeft;
        var y = e.pageY - img.offsetTop;

        var lensX = x - lensWidth / 2;
        var lensY = y - lensHeight / 2;

        lens.style.left = lensX + 'px';
        lens.style.top = lensY + 'px';

        result.style.backgroundImage = 'url(' + img.src + ')';
        result.style.backgroundSize = imgWidth * 2 + 'px ' + imgHeight * 2 + 'px';
        result.style.backgroundPosition = '-' + lensX * 2 + 'px -' + lensY * 2 + 'px';
        result.style.display = 'block';
      }

      function hideZoom() {
        result.style.display = 'none';
        lens.style.display = 'none';
      }

      img.addEventListener('mousemove', function(e) {
        lens.style.display = 'block';
        zoom(e);
      });

      img.addEventListener('mouseleave', hideZoom);
    });


