    <div class="categories-container my-5">
        <h3 class="section-title text-center mb-4">Top Rated Categories</h3>
        <div class="row g-4 justify-content-center align-items-stretch">
            <% categoryProducts.forEach(item => { %>
                <div class="col-6 col-sm-4 col-lg-2">
                    <a href="/shop?category=<%= item.category %>" class="text-decoration-none text-dark">
                        <div class="category-item border rounded shadow-sm p-3 text-center">
                            <div class="category-image mb-3">
                                <% if (item.product) { %>
                                    <img src="<%= item.product.images[0] %>" alt="<%= item.category %>" class="img-fluid rounded">
                                <% } else { %>
                                    <img src="/api/placeholder/220/220" alt="<%= item.category %>" class="img-fluid rounded">
                                <% } %>
                            </div>
                            <div class="category-name fw-bold mb-2"><%= item.category %></div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
          
        <div class="container my-5">
          <h2 class="text-center mb-4">Brands in Spotlight</h2>
          <div class="row">
            <% spotlightProducts.forEach((item) => { %>
                <div class="col-md-4">
                    <div class="brand-card border rounded shadow-sm p-3 text-center">
                        <div class="brand-img-container mb-3">
                            <img src="<%= item.product.images[0] || '/api/placeholder/400/400' %>" alt="<%= item.brand %>" class="img-fluid rounded">
                        </div>
                        <h5 class="brand-title">
                            <a href="/shop?brand=<%= encodeURIComponent(item.brand) %>" class="text-decoration-none text-dark">
                                <%= item.brand %>
                            </a>
                        </h5>
                        <div class="product-name text-muted small"><%= item.product.name %></div>
                        <% if (item.product.discountedPrice) { %>
                            <div class="product-price">
                                <span class="text-danger fw-bold">₹<%= item.product.discountedPrice %></span>
                                <small class="text-muted text-decoration-line-through">₹<%= item.product.price %></small>
                                <span class="badge bg-success ms-2">
                                    -<%= Math.round((1 - item.product.discountedPrice / item.product.price) * 100) %>% OFF
                                </span>
                            </div>
                        <% } else { %>
                            <div class="product-price text-dark">₹<%= item.product.price %></div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
        
          <!-- Pagination Section -->
          <div class="pagination-container mt-4 text-center">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>" class="btn btn-secondary me-2">Previous</a>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <a href="?page=<%= i %>" class="btn <%= i === currentPage ? 'btn-primary' : 'btn-outline-primary' %> mx-1"><%= i %></a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>" class="btn btn-secondary ms-2">Next</a>
            <% } %>
          </div>
        </div>  
    </div>
    
    

<div class="colorlib-product">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
        <h2>Products</h2>
      </div>
    </div>
    <div class="row row-pb-md">
      <% products.map((product, index) => { %>
          <div class="col-lg-3 mb-4 text-center">
              <div class="product-entry border">
                  <a href="/productDetails/<%= product._id %>" class="prod-img">
                      <img src="<%= product.images[0] %>" class="img-fluid" alt="<%= product.name %>">
                  </a>
                  <div class="desc">
                      <h2>
                          <a href="/productDetails/<%= product._id %>"><%= product.name %></a>
                      </h2>
                      <% if (product.discountedPrice) { %>
                          <span class="text-danger fw-bold">₹<%= product.discountedPrice %></span>
                          <small class="text-muted text-decoration-line-through">₹<%= product.price %></small>
                          <span class="badge bg-success ms-2">
                              -<%= Math.round((1 - product.discountedPrice / product.price) * 100) %>% OFF
                          </span>
                      <% } else { %>
                          <span class="price">₹<%= product.price %></span>
                      <% } %>
                  </div>
              </div>
          </div>
          <% if ((index + 1) % 4 === 0) { %>
              <div class="w-100"></div>
          <% } %>
      <% }); %>
  </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <p><a href="/shop" class="btn btn-primary btn-lg">Shop All Products</a></p>
      </div>
    </div>
  </div>
</div>


