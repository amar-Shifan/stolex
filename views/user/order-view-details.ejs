<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-white shadow-sm p-3 min-vh-100">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-person"></i> Profile
                </a>
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="bi bi-cart"></i> Orders
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart"></i> Wishlist
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-wallet"></i> Wallet
                </a>
            </div>
            <div class="mt-auto pt-3">
                <button class="btn btn-outline-danger w-100">
                    Sign out
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-4">
            <!-- Header Section -->
            <div class="bg-white rounded-3 p-4 shadow-sm mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="#" class="text-decoration-none text-muted mb-2 d-inline-block">
                            <i class="bi bi-arrow-left"></i> Back to Orders
                        </a>
                        <h2 class="mb-0">Order #12345</h2>
                        <p class="text-muted mb-0">Placed on Oct 25, 2024</p>
                    </div>
                    <span class="badge bg-success fs-6 " style="font-size: small;">Delivered</span>
                </div>
            </div>

            <!-- Order Items -->
            <div class="bg-white rounded-3 shadow-sm p-4 mb-4">
                <h4 class="mb-4">Order Items</h4>
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2" style="height: 60px; width: 60px; overflow: hidden;">
                                <img src="images/item-6.jpg" class="img-fluid rounded" style="width: 100%; height: 100%; object-fit: contain;"  alt="Product">
                            </div>
                            <div class="col-md-4">
                                <h5>Premium T-Shirt</h5>
                                <p class="text-muted mb-0">Color: Black | Size: M</p>
                                <p class="text-muted mb-0">Qty: 1</p>
                            </div>
                            <div class="col-md-3">
                                <p class="fw-bold mb-0">$29.99</p>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-light w-100 mb-2">Write Review</button>
                                <button class="btn btn-outline-danger w-100">Return Item</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Shipping Details -->
            <div class="bg-white rounded-3 shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0">Shipping Details</h4>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">Delivery Address</h6>
                                <h5 class="mb-2">John Doe</h5>
                                <p class="mb-1">123 Main Street, Apt 4B</p>
                                <p class="mb-1">New York, NY 10001</p>
                                <p class="mb-1">United States</p>
                                <p class="mb-0">Phone: (555) 123-4567</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-3 text-muted">Tracking Information</h6>
                                <p class="mb-2">Tracking Number:</p>
                                <h5 class="mb-3">1Z999AA1234567890</h5>
                                <a href="#" class="btn btn-primary">Track Package</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>

